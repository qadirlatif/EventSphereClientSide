
<div class="modal-content">
    <div class="modal-header">
        <h5 class="modal-title">
           <h3>Create Society</h3>
        </h5>
        <button onclick="location.reload()" type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <form id="actionForm">
            <div class="form-group">
                <label>Society Name: </label>
                <input class="form-control" name="SocietyName" placeholder="Enter Workspace Name" value="">
            </div>
        </form>

        <div class="errorDiv">

        </div>
    </div>
    <div class="modal-footer">
        <button id="actionButton" type="button" class="btn btn-primary"><i class="fas fa-save mr-1"></i> Save</button>
        <button onclick="location.reload()" type="button" class="btn btn-secondary" data-dismiss="modal"><i class="fas fa-times mr-1"></i> Close</button>
    </div>
</div>


<script>
	$("#actionButton").click(function () {
		$.ajax({
			url: '@Url.Action("SaveSociety", "Society")',
			type: "post",
            data: $("#actionForm").serialize(),
            success: function (data) {
                if (data) {
                    window.location.href = '/Society/DisplaySocietyInfo?ID=' + data.ID;
                }
            }
        })

